{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${file}",
                "${fileDirname}/*.cpp",
                "-o",
                // "${fileDirname}/${fileBasenameNoExtension}"
                "${fileDirname}/bin/${fileBasenameNoExtension}",
                /*
                */
                "-Wall",
                "-fexec-charset=UTF-8",
                "-finput-charset=UTF-8",
                "-std=c++11",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            /*
            */
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
